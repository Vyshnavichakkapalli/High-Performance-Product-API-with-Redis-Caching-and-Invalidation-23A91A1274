# ============================================
# High-Performance Product API - Environment Variables
# ============================================
# Copy this file to .env and modify values as needed.
# Default values are suitable for Docker Compose setup.

# Port on which the API service will listen
API_PORT=8080

# Redis server hostname (use 'redis' for Docker Compose, 'localhost' for local dev)
REDIS_HOST=redis

# Redis server port
REDIS_PORT=6379

# Default Time-To-Live for cached entries in seconds (1 hour)
CACHE_TTL_SECONDS=3600

# Database connection string (SQLite by default)
DATABASE_URL=sqlite:///./products.db
